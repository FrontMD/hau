mixin vacancy-category
    section.vacancy-category 
        .m-container
            +m-columns({
                classes: "m-columns--no-plpr",
                title: `<h1>Учебно-вспомогательный персонал</h1>
                <a href="#" class="title-link title-link--plus"><span class="title-link__icon"><svg><use xlink:href=img/sprites/sprite.svg#plus></use></svg></span><span class="title-link__text">Отправить резюме</span></a>`
            })
                form.vacancy-filter(action="#")
                .text-items-list
                    +vacancy-card
                    +vacancy-card({
                        title: 'Руководитель мастерских'
                    })
                    +vacancy-card({
                        title: 'Сотрудник PR-отдела'
                    })
                    +vacancy-card({
                        title: 'Монтажер'
                    })
                    +vacancy-card({
                        title: 'Заведующий отделением'
                    })
                    +vacancy-card({
                        title: 'Лаборант (преподаватель)'
                    })
                    +vacancy-card({
                        title: 'Лаборант (волонтер)'
                    })
                    +vacancy-card({
                        title: 'Волонтер на дни открытых дверей'
                    })
                    +vacancy-card({
                        title: 'Региональный эксперт по направлениям'
                    })
                    +vacancy-card({
                        title: 'Старший диспетчер по расписанию'
                    })
                    +vacancy-card({
                        title: 'Специалист по методической работе'
                    })
                    +vacancy-card({
                        title: 'Сотрудник в отдел учебного процесса'
                    })