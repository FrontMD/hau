                            mMode: 'image'
                        },
                        {
                            image: 'img/news/news_slide_3.webp',
                            video: '',
                            title: '',
                            text: '',
                            mMode: 'image'
                        },
                    ],
                })

            .news-detailed__sidebar
                +form({
                    classes: 'news-detailed__form',
                    title: 'Задать вопрос',
                    text: '',
                    btnText: 'Задать вопрос',
                })
                    +field({
                        classes: '',
                        type: 'text',
                        title: '',
                        placeholder: 'Имя',
                        inputAttr: {
                            'required': '',
