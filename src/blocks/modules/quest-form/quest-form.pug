-
    const defaultQuestFormProps = {
        classes: '',
    }

mixin quest-form(props = defaultQuestFormProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultQuestFormProps.classes,
        }

    section.quest-form
        .m-container
            .quest-form__content 
                .quest-form__left
                    .h2.quest-form__title <span>Анкета-заявка</span> на&nbsp;подготовительные курсы Центра довузовского образования и&nbsp;подготовки к&nbsp;ЕГЭ
                    .quest-form__text.text-editor
                        p Заполните заявку на курсы
                        p Уточнить информацию вы можете <br>по телефонам: <a href="tel:+79999009090">+7 (999) 900 90 90</a> <br>E-mail: <a href="mailto:cdo@khay.ru">cdo@khay.ru</a>
                        p Мы обязательно свяжемся с Вами!

                +form({
                    classes: 'quest-form__form',
                    title: '',
                    text: '',
                    btnText: 'Отправить',
                })
                    .form__flex
                        +field({
                            classes: '',
                            type: 'text',
                            title: '',
                            inputAttr: {
                                'required': ''
                            },
                            placeholder: 'Фамилия, имя и отчество контактного лица*',
                            resetBtn: false,
                            isRequired: true
                        })
                        +field({
                            classes: '',
                            tag: 'select',
                            inputAttr: {
                                'required': ''
                            },
                            placeholder: 'Интересуют курсы подготовки',
                            selectOptions: [
                                "Информатика",
                                "Математика",
                                "Физика",
                                "Русский язык",
                                "Обществознание",
                                "Биология",
                                "Химия"
                            ],
                            selectGreen: true

                        })
                    .form__flex
                        +field({
                            classes: '',
                            type: 'tel',
                            title: '',
                            placeholder: 'Контактный телефон*',
                            inputAttr: {
                                'required': '',
                                'data-type': 'phoneNumber',
                                'data-v-name': 'phone'
                            },
                            resetBtn: false,
                            isRequired: true
                        })
                        +field({
                            classes: '',
                            tag: 'select',
                            placeholder: 'Формат занятий',
                            selectOptions: [
                                "Очно",
                                "Дистанционно"
                            ]

                        })
                    .form__flex
                        +field({
                            classes: '',
                            type: 'email',
                            title: '',
                            placeholder: 'Контактный email',
                            inputAttr: {
                                'required': '',
                                'data-v-name': 'email'
                            },
                            resetBtn: false
                        })
                        +field({
                            classes: '',
                            tag: 'select',
                            placeholder: 'Интересует продолжительность курсов',
                            selectOptions: [
                                "96 ак.часов",
                                "48 ак.часов",
                                "28 ак.часов"
                            ]

                        })

                    +field({
                        classes: '',
                        tag: 'textarea',
                        title: '',
                        placeholder: 'Текст обращения',
                    })



